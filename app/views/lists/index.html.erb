<h1>Save any kind of movies</h1>

<h2>My lists</h2>

<%= link_to "My lists", lists_path %>
<%= link_to "New list", new_list_path %>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
          <!-- Add any other list details you want to display here -->
        </div>
      </div>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
</div>
